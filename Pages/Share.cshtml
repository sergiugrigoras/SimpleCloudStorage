@page
@model SimpleCloudStorage.Pages.ShareModel
@{
    ViewData["Title"] = "Share";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Share</h1>

<form method="post">
    <div class="row">
        <div class="col-md-6">
            <h4>Shared with me</h4>
            @foreach (var s in Model.SharedToUserList)
            {
                <div class="fso fso-file">
                    <div>
                        <i class="fas fa-file"></i>
                        <span>@s.Fso.Name&nbsp;&nbsp;</span>
                        <span><b>Size:&nbsp;</b></span>
                        <span class="file-size">@s.Fso.FileSize</span>
                        <span>From:@s.FromUser.Name</span>
                    </div>
                    <button type="submit" asp-route-fsoId="@s.FsoId" asp-route-fileName="@s.Fso.Name" asp-route-fromUserId="@s.FromUserId" asp-page-handler="Download"><i class="fas fa-download"></i></button>
                </div>
            }
        </div>
        <div class="col-md-6">
            <h4>My shares</h4>
            @foreach (var s in Model.SharedFromUserList)
            {
                <div class="fso fso-file">
                    <div>
                        <i class="fas fa-file"></i>
                        <span>@s.Fso.Name&nbsp;&nbsp;</span>
                        <span><b>Size:&nbsp;</b></span>
                        <span class="file-size">@s.Fso.FileSize</span>
                        <span>To:@s.ToUser.Name</span>
                    </div>
                    <button type="submit" asp-route-fsoId="@s.FsoId" asp-route-fileName="@s.Fso.Name" asp-route-fromUserId="@s.FromUserId" asp-page-handler="Download"><i class="fas fa-download"></i></button>
                    <button type="submit" asp-route-fromUserId="@s.FromUserId" asp-route-toUserId="@s.ToUserId" asp-route-fsoId="@s.FsoId" asp-page-handler="Delete"><i class="fas fa-ban"></i></button>
                </div>
            }
        </div>
    </div>
</form>