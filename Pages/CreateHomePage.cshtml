@page
@model SimpleCloudStorage.Pages.CreateHomePageModel
@{
    ViewData["Title"] = "CreateHomePage";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>CreateHomePage</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HomeDirName" class="control-label"></label>
                <input asp-for="HomeDirName" class="form-control" />
                <span asp-validation-for="HomeDirName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-danger">
            </div>
        </form>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

