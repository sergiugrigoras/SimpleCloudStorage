@page "{id:int}"
@model SimpleCloudStorage.Pages.HomePageModel
@{
    ViewData["Title"] = "HomePage";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>@Model.CurrentUser.Name's HomePage&nbsp;<a asp-page="CreateHomePage"><i class="fas fa-edit"></i></a></h1>


<div class="row">
    <div class="col-md-12 path-bar">
        @foreach (var fso in Model.fullPathList)
        {
            <div class="path-bar-folder">
                <a asp-page="Homepage" asp-route-id="@fso.Id">@fso.Name</a>
            </div>
            <div class="path-bar-icon">
                <i class="fas fa-angle-right"></i>
            </div>
        }
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <form method="post">
            <div class="search-box">
                <input type="text" placeholder="Search" name="keyword" id="search1" />
                <input type="hidden" name="dirId" value="@Model.CurrentDir.Id">
                <button asp-page="Search" type="submit"><i class="fas fa-search"></i></button>
            </div>
            @foreach (var fso in Model.Children)
            {
                if (fso.IsFolder)
                {
                    <div class="fso fso-folder">
                        <div>
                            <i class="fas fa-folder"></i>
                            <a asp-page="Homepage" asp-route-id="@fso.Id">@fso.Name</a>
                        </div>
                        <button type="button" class="fso-action-btn" data-toggle="modal" data-target="#confirm-delete" data-fsoname="@fso.Name" data-fsoid="@fso.Id" data-fsotype="Folder"><i class="fas fa-trash-alt"></i></button>
                    </div>
                }
                else
                {
                    <div class="fso fso-file">
                        <div>
                            <i class="fas fa-file"></i>
                            <span>@fso.Name&nbsp;&nbsp;</span>
                            <span><b>Size:&nbsp;</b></span>
                            <span class="file-size">@fso.FileSize</span>
                        </div>
                        <button type="submit" asp-route-id="@fso.Id" asp-page-handler="Download"><i class="fas fa-download"></i></button>
                        <button type="button" data-toggle="modal" data-target="#confirm-delete" data-fsoname="@fso.Name" data-fsoid="@fso.Id" data-fsotype="File"><i class="fas fa-trash-alt"></i></button>
                        @if (Model.Roles.Contains("PremiumUser"))
                        {
                            <button type="button" data-toggle="modal" data-target="#confirm-share" data-fsoname="@fso.Name" data-fsoid="@fso.Id" data-fsotype="File"><i class="fas fa-share-alt"></i></button>
                        }

                    </div>
                }
            }
        </form>
    </div>
    <div class="col-md-4">
        <form enctype="multipart/form-data" method="post">
            <input type="hidden" name="returnId" value="@Model.CurrentDir.Id" />
            <div class="create-folder-box">
                <input type="text" name="fsoName" class="" placeholder="Create Folder">
                <button asp-page-handler="CreateFolder" type="submit"><i class="fas fa-folder-plus"></i></button>
            </div>
            <div class="upload-file-box">
                <input id="file" type="file" name="file" />
                <button asp-page-handler="Upload" type="submit"><i class="fas fa-file-upload"></i></button>
            </div>
        </form>
    </div>
</div>

<!--Delete Confirmation Modal Dialog-->
<div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form method="post">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalLabel">Confirm Delete</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Cancel">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h6 id="confirm-text"></h6>
                    <input type="hidden" id="fso-id" name="fsoId" />
                    <input type="hidden" id="return-id" name="returnId" value="@Model.CurrentDir.Id" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger" asp-page-handler="Delete">Delete</button>
                </div>
            </div>
        </form>
    </div>
</div>

<!--Share Confirmation Modal Dialog-->
<div class="modal fade" id="confirm-share" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form method="post">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalLabel">Confirm Share</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Cancel">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h6 id="confirm-text"></h6>
                    <label for="recipient-name" class="col-form-label">Recipient:</label>
                    <input type="email" class="form-control" id="recipient-name" name="recipient">
                    <input type="hidden" id="fso-id" name="fsoId" />
                    <input type="hidden" id="return-id" name="returnId" value="@Model.CurrentDir.Id" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-warning" asp-page="Share">Share</button>
                    <button type="submit" class="btn btn-danger" asp-page="Public">Make Public</button>
                </div>
            </div>
        </form>
    </div>
</div>