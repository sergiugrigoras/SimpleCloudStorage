@page "{id:int}"
@model SimpleCloudStorage.Pages.HomePageModel
@{
    ViewData["Title"] = "HomePage";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>@Model.CurrentUser.Name's HomePage</h1>

<div>
    @foreach (var fso in Model.fullPathList)
    {
        <a asp-page="Homepage" asp-route-id="@fso.Id" class="folder-link">@fso.Name</a><i class="fas fa-angle-right"></i>
    }
</div>

<div class="row">
    <div class="col-md-8">
        <form method="post">
            <ul>
                <li>
                    <div class="search-wrap">
                        <input type="text" placeholder="Search" name="keyword" class="search-input" />
                        <input type="hidden" name="dirId" value="@Model.CurrentDir.Id">
                        <input asp-page="Search" type="submit" value="Search" class="btn btn-primary">
                    </div>
                </li>
                @foreach (var fso in Model.Children)
                {
                    if (fso.IsFolder)
                    {
                        <li>
                            <div class="alert alert-warning" role="alert">
                                <i class="fas fa-folder"></i>
                                <a asp-page="Homepage" asp-route-id="@fso.Id" class="folder-link">@fso.Name</a>
                                <button type="button" class="btn" data-toggle="modal" data-target="#confirm-delete" data-fsoname="@fso.Name" data-fsoid="@fso.Id" data-fsotype="Folder"><i class="fas fa-trash-alt"></i></button>
                            </div>
                        </li>
                    }
                    else
                    {
                        <li>
                            <div class="alert alert-success" role="alert">
                                <i class="fas fa-file"></i>
                                @fso.Name <b>Size:</b> @fso.FileSize <b>Upload Date:</b> @fso.CreateDate
                                @*@fso.Name <b>Size:</b> @(((Dictionary<string, string>)ViewData["FilesSizes"])[fso.Name]) <b>Upload Date:</b> @(((Dictionary<string, string>)ViewData["FilesUploadDates"])[fso.Name])*@
                                <button type="submit" class="btn" asp-route-id="@fso.Id" asp-route-name="@fso.Name" asp-page-handler="Download"><i class="fas fa-download"></i></button>
                                <button type="button" class="btn" data-toggle="modal" data-target="#confirm-delete" data-fsoname="@fso.Name" data-fsoid="@fso.Id" data-fsotype="File"><i class="fas fa-trash-alt"></i></button>
                                <button type="button" class="btn" data-toggle="modal" data-target="#confirm-share" data-fsoname="@fso.Name" data-fsoid="@fso.Id" data-fsotype="File"><i class="fas fa-share-alt"></i></button>

                            </div>
                        </li>
                    }
                }
            </ul>
        </form>
    </div>
    <div class="col-md-4">
        <div>
            <form method="post">
                <label class="control-label">Folder Name:</label>
                <input type="text" name="fsoName" class="form-control">
                <input type="hidden" name="parentId" value="@Model.CurrentDir.Id">
                <input asp-page-handler="CreateFolder" type="submit" value="Create Folder" class="btn btn-primary">
            </form>
        </div>
        <div>
            <form enctype="multipart/form-data" method="post">
                <div class="form-group">
                    <label class="control-label">Upload File</label>
                    <input id="file" type="file" name="file" />
                    <input type="hidden" name="returnId" value="@Model.CurrentDir.Id">
                </div>
                <input asp-page-handler="Upload" class="btn btn-primary" type="submit" value="Upload" />
            </form>
        </div>
    </div>
</div>





<!--Delete Confirmation Modal Dialog-->
<div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form method="post">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalLabel">Confirm Delete</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Cancel">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h6 id="confirm-text"></h6>
                    <input type="hidden" id="fso-id" name="fsoId" />
                    <input type="hidden" id="return-id" name="returnId" value="@Model.CurrentDir.Id" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger" asp-page-handler="Delete">Delete</button>
                </div>
            </div>
        </form>
    </div>
</div>

<!--Share Confirmation Modal Dialog-->
<div class="modal fade" id="confirm-share" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form method="post">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalLabel">Confirm Share</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Cancel">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h6 id="confirm-text"></h6>
                    <label for="recipient-name" class="col-form-label">Recipient:</label>
                    <input type="email" class="form-control" id="recipient-name" name="recipient">
                    <input type="hidden" id="fso-id" name="fsoId" />
                    <input type="hidden" id="return-id" name="returnId" value="@Model.CurrentDir.Id" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-warning" asp-page="Share">Share</button>
                </div>
            </div>
        </form>
    </div>
</div>
